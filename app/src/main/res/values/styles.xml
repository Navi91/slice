<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AnswerTextView" parent="AppTextView.White.Center">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTextView" />

    <style name="AppTextView.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTextView.White.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTextView.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTextView.18.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTextView.18.Secondary.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTextView.18.Secondary.Center.AllCaps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTextView.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTextView.24.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

</resources>
